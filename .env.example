# License Validation Service - Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
SERVER_PORT=8199

# JWE Security Configuration (REQUIRED for production)
# Must be exactly 32 characters for AES-256-GCM encryption
JWE_SECRET_KEY=12345678901234567890123456789012
JWE_EXPIRATION_SECONDS=3600
JWE_ISSUER=lib-validate-license

# Email Configuration (REQUIRED for email notifications)
# Gmail example - use App Password, not regular password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@license-service.com
EMAIL_ENABLED=true

# Scheduler Configuration
# Enable/disable scheduled tasks
SCHEDULER_ENABLED=true
# Cron expression for expiration warnings (default: daily at 9:00 AM)
# Format: second minute hour day month dayOfWeek
SCHEDULER_CRON=0 0 9 * * ?

# H2 Console Configuration (Development only)
H2_CONSOLE_ENABLED=true

# Database Configuration (Optional - defaults to H2 embedded)
# Uncomment and configure if using external database
#DATABASE_URL=jdbc:postgresql://localhost:5432/licenses
#DATABASE_DRIVER=org.postgresql.Driver
#DATABASE_USERNAME=license_user
#DATABASE_PASSWORD=secure_password

# Spring Profile
# Options: default (development), prod (production)
#SPRING_PROFILES_ACTIVE=prod

# Logging Configuration
#LOGGING_LEVEL_ROOT=INFO
#LOGGING_LEVEL_APP=DEBUG
